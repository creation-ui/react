{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "react/next",
      "react-dom/next",
      "mdx"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@components": [
        "./components/"
      ],
      "@creation-ui/react/*": [
        "./packages/react/src/*"
      ],
      "@creation-ui/react": [
        "./packages/react/src"
      ],
      "@examples/*": [
        "./components/examples/*"
      ],
      "@examples": [
        "./components/examples/"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@pages": [
        "pages"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@utils": [
        "utils"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@models": [
        "./models"
      ],
      "@root/*": [
        "./*"
      ],
      "@root": [
        "./"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "theme.config.tsx",
    "pages/index.tsx",
    ".next/types/**/*.ts",
    "pages/_app.msx",
    "scripts/generate-docs.js",
    "@creation-ui/react",
    "@creation-ui/core"
  ],
  "exclude": [
    "node_modules",
    "**/build",
  ]
}