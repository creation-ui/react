{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "incremental": false,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "declarationMap": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "rootDir": ".",
    "paths": {
      "@components": ["./src/components/"],
      "@components/*": ["./src/components/*"],
      "@types": ["./src/types/"],
      "@types/*": ["./src/types/*"],
      "@theme": ["./src/theme/"],
      "@theme/*": ["./src/theme/*"],
      "@hooks": ["./src/hooks/"],
      "@hooks/*": ["./src/hooks/*"],
      "@styles": ["./src/styles/"],
      "@styles/*": ["./src/styles/*"],
      "@utils": ["./src/utils/"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}