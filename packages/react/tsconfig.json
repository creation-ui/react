{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "incremental": false,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "declarationMap": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "paths":{
      "@creation-ui/core/*": ["../core/src/*"],
      "@creation-ui/core": ["../core/src"],
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "**/tests",
    "**/*.cy.tsx",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}
